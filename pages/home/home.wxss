.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bg {
  position: fixed;
  width: 100%;
  height: 100%;
}
.input-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
}
.input-item label {
  height: 46px;
  width: 56px;
  line-height: 46px;
  text-align: center;
  border-radius: 5px 0px 0px 5px;
  border-right: none;
  background-color: #2b85e4;
  color: white;
}
.input-item input {
  box-sizing: border-box;
  border: 1px solid #ccc;
  height: 46px;
  border-radius: 0px 5px 5px 0px;
  border-left: none;
  padding-left: 5px;
  background-color: white;
}


