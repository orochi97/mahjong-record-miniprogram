/**index.wxss**/
.game-container {
  position: relative;
  height: 100vh;
}
.bg {
  position: fixed;
  width: 100%;
  height: 100%;
}
.player {
  position: absolute;
  border-radius: 10px;
  background-color: white;
  padding: 5px;
}
.info {
  flex-direction: row;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 5px;
}
.role {
  padding: 5px;
  color: #666;
  font-size: 14px;
}
.avatar {
  width: 50px;
  height: 50px;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  margin-right: 5px;
}
.score {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.input-group {
  display: flex;
  flex-direction: row;
  align-content: center;
}
.flag-input {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  height: 30px;
  width: 150px;
  background-color: white;
}
.flag-input.score-minus {
  color: #19be6b;
}
.flag-input.score-add {
  color: #ed4014;
}
.flag-btn {
  width: 20px;
}
.minus {
  background-color: #19be6b;
  border-radius: 5px 0px 0px 5px;
}
.add {
  background-color: #ed4014;
  border-radius: 0px 5px 5px 0px;
}

.east {
  left: 0px;
  top: 30px;
}
.south {
  right: 0px;
  top: 150px;
}
.west {
  left: 0px;
  top: 270px;
}
.north {
  right: 0px;
  top: 390px;
}
.east .avatar {
  background-color: #00FFFF;
}
.south .avatar {
  background-color: red;
  color: white;
}
.west .avatar {
  background-color: white;
}
.north .avatar {
  background-color: black;
  color: white;
}

.action-btn {
  position: absolute;
  bottom: 40px;
  justify-content: space-between;
  display: flex;
  width: 100%;
}

.summary {
  position: absolute;
  height: 40px;
  top: 10px;
  right: 10px;
  padding: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  font-size: 14px;
  border-radius: 5px;
  border: 1px solid #ccc;
  color: gray;
  text-align: left;
}